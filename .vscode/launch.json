{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true, 
            "args":[
                "--model_name", "hfl/chinese-macbert-base", 
                "--num_labels", "2",  
                "--data_dir", "./data",  
                "--maxlength", "64",  
                "--adversarial_training_param", "2",  
                "--pred_output_dir", "./sample-submissions" , 
                "--output_model_dir", "sample_run", 
                "--epoch", "4",  
                "--batch_size", "8",  
                "--kfolds", "5",
                "--num_training_examples", "100", 
                "--perform_testing", 
                "--lr", "1e-5", 
            ]
        }
    ]
}